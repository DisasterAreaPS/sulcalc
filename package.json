{
    "name": "sulcalc",
    "version": "0.3.0",
    "author": "sulcata",
    "private": true,
    "description": "A Pokemon damage calculator.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Sulcata/Sulcata-Damage-Calculator"
    },
    "bugs": {
        "url": "https://github.com/Sulcata/Sulcata-Damage-Calculator/issues"
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageReporters": [
            "json",
            "lcov"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 45,
                "functions": 85,
                "lines": 50,
                "statements": 50
            }
        }
    },
    "scripts": {
        "serve": "webpack-dev-server --config build/webpack.app.dev.js",
        "build": "yarn build:app:production",
        "build:app": "webpack --config build/webpack.app.dev.js",
        "build:app:production": "webpack --config build/webpack.app.prod.js",
        "build:lib": "webpack --config build/webpack.lib.config.js",
        "test": "yarn lint && yarn test:unit",
        "test:unit": "jest --coverage",
        "lint": "eslint '**/*.{js,vue}'",
        "setup": "yarn db && yarn setdex && yarn translations",
        "db": "node build/db",
        "setdex": "node build/setdex",
        "translations": "node build/translations"
    },
    "devDependencies": {
        "babel-core": "^6.24.1",
        "babel-eslint": "^7.2.3",
        "babel-loader": "^7.0.0",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
        "babel-plugin-transform-export-extensions": "^6.22.0",
        "babel-register": "^6.24.1",
        "babili-webpack-plugin": "^0.0.11",
        "bootstrap": "4.0.0-alpha.6",
        "css-loader": "^0.28.0",
        "eslint": "^3.19.0",
        "eslint-import-resolver-webpack": "^0.8.1",
        "eslint-plugin-html": "^2.0.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-unicorn": "^2.1.1",
        "handlebars": "^4.0.6",
        "handlebars-loader": "^1.5.0",
        "html-webpack-plugin": "^2.28.0",
        "jest": "^19.0.2",
        "lodash": "^4.17.4",
        "mkdirp": "^0.5.1",
        "vue": "2.3.0",
        "vue-i18n": "6.0.0",
        "vue-loader": "^12.0.2",
        "vue-multiselect": "2.0.0-beta.15",
        "vue-template-compiler": "2.3.0",
        "webpack": "^2.4.1",
        "webpack-dev-server": "^2.4.5"
    }
}
